.designer
  .span-2 &nbsp;
  .span-20
    .stylize.black.big= @designer.first_name + " " + @designer.last_name
    %br
    %p.stylize= @designer.bio
    %br
    %br
    - for work in @designer.works
      = link_to image_tag(work.image.url, :width => "180px", :style => "border: 1px solid #000;"), work
    
    %br
    %br
    - if current_user
      = link_to "Edit this Designer", edit_designer_path(@designer)
      &nbsp;&nbsp;&nbsp;|&nbsp;&nbsp;&nbsp;
      = link_to "Add work", :controller => :works, :action => :new, :designer_id => @designer.id
  .span-2.last &nbsp;
  
  