= form_for @designer do |f|
  -if @designer.errors.any?
    #error_explanation
      %h2= "#{pluralize(@designer.errors.count, "error")} prohibited this designer from being saved:"
      %ul
        - @designer.errors.full_messages.each do |msg|
          %li= msg

  .field

    = f.label "First Name:"
    %br
    = f.text_field :first_name
  .field
    = f.label "Last Name:"
    %br
    = f.text_field :last_name
  .field
    = f.label "Biography"
    %br
    = f.text_area :bio
  .actions
    = f.submit 'Save'
